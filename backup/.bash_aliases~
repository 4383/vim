alias tailpvacc="tail -f /var/log/httpd/dev.plusvalue.access.log"

#-------------------------Créer une sitemap d'un site
alias sitemapVSA="wget -r 'http://visa-schengen-assurance.com' -o preSiteMap"

#-------------------------Apache
alias apr="sudo /etc/init.d/apache2 restart"
alias gdmr="sudo /etc/init.d/gdm restart"
alias netr="sudo /etc/init.d/networking restart" 
