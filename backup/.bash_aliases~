#---------------------------------------------
# Configuration de mes alias permanent
#---------------------------------------------

#-------------------------courant
alias ll="ls -la"
alias li="li -i"
alias cls="clear"
alias load=". ~/.bashrc"
alias mkdirp="mkdir -p"
alias lns="ln -s"

#-------------------------aller au repertoire
alias cdw="cd /var/www"
alias cdwvsadev="cd /var/www/siteavs/dev"
alias cdwvsapre="cd /var/www/siteavs/preprod"
alias cda="cd /etc/apache2"
alias cdwpv="cd /var/www/plusvalue"
alias cdOlivier="cd /mnt/OlivierPartage"

#-------------------------analyse reseau
alias pingbroadcast="ping -b 192.168.0.255"
alias nmap="nmap -PN -sC -A -T4 "

#-------------------------edition
alias vimalias="vim ~/.bash_aliases"
alias vimbash="vim ~/.bashrc"
alias vimvim="vim ~/.vimrc"
alias vimh="sudo vim /etc/hosts"
alias vimv="sudo vim /etc/apache2/sites-available/default"
alias vimp="sudo vim /etc/php5/apache2/php.ini"

#-------------------------recherche
alias findPhp="find . | grep php$ | xargs grep "

#-------------------------connection ssh
alias sshbremi="ssh bazaar@83.145.112.88"
alias sshrremi="ssh root@83.145.112.88"
alias sshrbat="ssh root@192.168.1.26"
alias sshRv="ssh rv@82.247.247.196"
