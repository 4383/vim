#-------------------------monter des partitions
alias mntO="sudo mount -t cifs //192.168.0.14/Partage /mnt/OlivierPartage -o auto,username=Olivier,password=13olivier13"

#-------------------------supprimer
alias ri="rm -i"
alias rm="rm -r"

#-------------------------Uploader rsync
alias upPreProd="rsync -arv --delete --backup --backup-dir=/home/bazaar/backup/preprod/ /var/www/siteavs/preprod/ root@83.145.112.88:/www/htdocs/bazaar/preprod/"

#-------------------------Compresser / Decompresser
alias tarc="tar cfvz"
alias tard="tar xfvz"

#-------------------------Synthèse vocale
alias parler="espeak -v fr "

#-------------------------VSA
alias tailvsaerr="tail -f /var/log/httpd/dev.avs.error.log"
alias tailvsaacc="tail -f /var/log/httpd/dev.avs.access.log"
alias vsaPurgerSmarty="rm -rf /var/www/siteavs/dev/libs/smarty/compile/*"

#-------------------------Info Schengen assurance (plus value)
